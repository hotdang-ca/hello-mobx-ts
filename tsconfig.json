{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "preserveConstEnums": true,
      "removeComments": true,
      "experimentalDecorators": true,
      "lib": ["es6", "dom"],
      "noImplicitAny": true,
      "skipLibCheck": true,
      "jsx": "react",
      "outDir": "./tmp/tsc"
    },
    "include": [ "./src/**/*" ]
  }
  